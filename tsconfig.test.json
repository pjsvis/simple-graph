{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist-test",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "declaration": false, // No need for declaration files in test compilation
    "sourceMap": false // No need for source maps in test compilation
  },
  "include": [
    "src/cli.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "src/visualization"
  ]
}