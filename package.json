{
  "name": "simple-graph",
  "version": "1.0.0",
  "description": "A simple graph database with TypeScript SQL functions",
  "type": "module",
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "bun build ./src/SimpleGraph.ts ./src/cli.ts --outdir ./dist --target bun",
    "test": "bun test",
    "test-persist": "bun test > tests.md 2>&1",
    "test:run": "bun test",
    "test:watch": "bun test --watch",
    "test:ui": "bun test --reporter=html",
    "test:coverage": "bun test --coverage",
    "render-graphs": "bun run scripts/visualization/render-graphs.ts",
    "render-png": "bun run scripts/visualization/render-png.cjs",
    "render-png-all": "bun run scripts/visualization/render-png.cjs --all",
    "render-thumbnails": "bun run scripts/visualization/render-png.cjs --thumbnails",
    "generate-visualizations": "bun run test:run tests/integration/dot-graph-visualization.test.ts && bun run render-graphs",
    "reorganize": "bun run tools/reorganize-project.cjs",
    "reorganize-preview": "bun run tools/reorganize-project.cjs --dry-run --verbose",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "view-images": "open outputs/images/index.html",
    "clean": "rm -rf outputs/visualizations/*.dot outputs/images/*.png outputs/images/*.svg",
    "generate-persona": "bun run scripts/persona-generator.cjs",
    "refactor-ids": "bun run scripts/id-refactor/run-refactor.cjs",
    "id-mapping-report": "bun run scripts/id-refactor/generate-id-mapping-report.cjs",
    "generate-ctx-v3": "bun run scripts/ctx-v3-persona-generator.cjs",
    "test-core": "bun test tests/types.test.ts tests/unit/cda-import.test.ts tests/unit/conceptual-lexicon-import.test.ts",
    "test-safe": "bun run scripts/run-safe-tests.cjs",
    "test-safe-core": "bun run scripts/run-safe-tests.cjs test-core",
    "test-safe-all": "bun run scripts/run-safe-tests.cjs test",
    "test-db-init": "bun run scripts/test-database-manager.cjs init",
    "test-db-cleanup": "bun run scripts/test-database-manager.cjs cleanup",
    "test-db-verify": "bun run scripts/test-database-manager.cjs verify",
    "web-serve": "bun --watch www/index.html --port=8080",
    "web-build": "bun run scripts/build-web-assets.cjs",
    "web-deploy": "bun run web-build && bun run web-serve"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/sqlite3": "^3.1.11",
    "bun-types": "^1.2.20",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "graph",
    "database",
    "sql",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/bun": "^1.2.20",
    "sqlite3": "^5.1.7",
    "undici": "^7.14.0"
  }
}
