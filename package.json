{
  "name": "simple-graph",
  "version": "1.0.0",
  "description": "A simple graph database with TypeScript SQL functions",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test-persist": "vitest > tests.md 2>&1",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "render-graphs": "node -r ts-node/register scripts/visualization/render-graphs.ts",
    "render-png": "node scripts/visualization/render-png.cjs",
    "render-png-all": "node scripts/visualization/render-png.cjs --all",
    "render-thumbnails": "node scripts/visualization/render-png.cjs --thumbnails",
    "generate-visualizations": "npm run test:run tests/integration/dot-graph-visualization.test.ts && npm run render-graphs",
    "reorganize": "node tools/reorganize-project.cjs",
    "reorganize-preview": "node tools/reorganize-project.cjs --dry-run --verbose",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "view-images": "open outputs/images/index.html",
    "clean": "rm -rf outputs/visualizations/*.dot outputs/images/*.png outputs/images/*.svg",
    "generate-persona": "node scripts/persona-generator.cjs",
    "refactor-ids": "node scripts/id-refactor/run-refactor.cjs",
    "id-mapping-report": "node scripts/id-refactor/generate-id-mapping-report.cjs",
    "generate-ctx-v3": "node scripts/ctx-v3-persona-generator.cjs",
    "test-core": "vitest run tests/types.test.ts tests/unit/cda-import.test.ts tests/unit/conceptual-lexicon-import.test.ts",
    "test-safe": "node scripts/run-safe-tests.cjs",
    "test-safe-core": "node scripts/run-safe-tests.cjs test-core",
    "test-safe-all": "node scripts/run-safe-tests.cjs test",
    "test-db-init": "node scripts/test-database-manager.cjs init",
    "test-db-cleanup": "node scripts/test-database-manager.cjs cleanup",
    "test-db-verify": "node scripts/test-database-manager.cjs verify",
    "web-serve": "live-server www --port=8080 --open=/index.html",
    "web-build": "node scripts/build-web-assets.cjs",
        "web-deploy": "npm run web-build && npm run web-serve"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/sqlite3": "^3.1.11",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "live-server": "^1.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "graph",
    "database",
    "sql",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "sqlite3": "^5.1.7",
    "undici": "^7.14.0"
  }
}
